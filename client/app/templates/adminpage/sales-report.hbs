<div class="row">
  <div class="col-xs-12">
    <h5 id="comic" >Comics</h5>
    <table class="table">
      <thead>
        <tr>
          <th>Item Id</th>
          <th>Item Name</th>
          <th>PRICE</th>
          <th>Sales Price</th>
          <th>Number Sold</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |detail|}}
        {{#if detail.item_id.comic}}
          <tr>
            <td>{{detail.item_id.id}}</td>
            <td>{{detail.item_id.name}}
              {{#if detail.item_id.comic}}
              Issue #: {{detail.issue_num}}
              {{/if}}
              {{#if detail.item_id.apparel}}
              Size: {{detail.size}}
              {{/if}}
            </td>
            <td>{{detail.item_id.price}}</td>
            <td>{{detail.item_id.sales_price}}</td>
            <td>{{detail.numberSold}}</td>
          </tr>
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  </div>
