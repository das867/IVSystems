<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th>NAME</th>
          <th>UID</th>
          <th>ADMIN ACCESS</th>
          <th>EDIT</th>
          <th>REMOVE</th>
        </tr>
      </thead>
      <tbody>
        {{#each model as |user|}}
          <tr>
            <td>{{user.full_name}}</td>
            <td>{{user.id}}</td>
            <td>{{user.isAdmin}}</td>
            <td>
              <button class="btn btn-default center-block" {{action "editEmployee" user.id}}><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
            </td>
            <td>
              <button {{action "deleteEmployee" user.id }} class="btn btn-default center-block" ><span class="glyphicon glyphicon-minus" aria-hidden="true"></span></button>
            </td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <button class="btn btn-default btn-block" data-toggle="modal" data-target="#new-employee">Create Employee</button>
  </div>
</div>
{{new-employee-form createEmployee="createEmployee"}}
{{edit-employee-form commitEdit="commitEdit" admin=User.isAdmin first_name=editUser.first_name last_name=editUser.last_name}}
